@model TAApplication.ViewModels.ApplicationCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pursuing" class="control-label"></label>
                <select asp-for="Pursuing" asp-items="@Html.GetEnumSelectList<Pursuing>()"
                        class="form-control"></select>
                <span asp-validation-for="Pursuing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPA" class="control-label"></label>
                <input asp-for="GPA" class="form-control" placeholder="0" />
                <span asp-validation-for="GPA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" placeholder="e.g. CS" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numberOfHour" class="control-label"></label>
                <input asp-for="numberOfHour" class="form-control" placeholder="0" />
                <span asp-validation-for="numberOfHour" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="avaiableBefore" /> @Html.DisplayNameFor(model => model.avaiableBefore)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SemestersCount" class="control-label"></label>
                <input asp-for="SemestersCount" class="form-control" placeholder="0" />
                <span asp-validation-for="SemestersCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resume" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="resume" id="resume" class="form-control custom-file-input" accept=".pdf" />
                    <label class="custom-file-label"></label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="photo" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="photo" class="form-control custom-file-input" />
                    <label class="custom-file-label"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

